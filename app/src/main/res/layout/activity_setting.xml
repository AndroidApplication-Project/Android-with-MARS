<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A829D"
        android:elevation="4dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/profile_pic"
        app:civ_border_color="@color/design_default_color_primary"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/change_profile_btn"
        android:layout_below="@+id/profile_image"
        android:text="Change Profile"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email_id"
        android:hint="your email id "
        android:layout_below="@+id/change_profile_btn"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="17dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:text=""
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_password"
        android:hint="your password is "
        android:layout_below="@+id/email_id"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/edt_name"
        android:layout_below="@+id/edt_password"
        android:layout_marginTop="13dp"
        android:textSize="20sp"
        android:hint="Your Name"
        android:layout_marginEnd="20dp"
        android:layout_alignStart="@+id/phone_number"
        android:textColor="#000000"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/phone_number"
        android:hint="Your Phone No. "
        android:layout_below="@+id/edt_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="11dp"
        android:textSize="20sp"
        android:text=""
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16dp"
        android:layout_below="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Close"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginRight="6dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Save"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>