<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcgrnd"
    android:outlineProvider="bounds"
    tools:context="Quiz.BeginnerQuizActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btnanswer3"
        style="@style/AppTheme.AppStyled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bottomNavView"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-90dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Java"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/btnanswer2"
        style="@style/AppTheme.AppStyled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnanswer3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="104dp"
        android:gravity="center"
        android:text="Kotlin"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/btnanswer1"
        style="@style/AppTheme.AppStyled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnanswer2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:text="Swift"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tvquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnanswer1"
        android:layout_below="@+id/timer"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Which of the following language is not used in android? Choose one or more options."
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/btnanswer4"
        style="@style/AppTheme.AppStyled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnanswer1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="7dp"
        android:text="Phython"
        android:textStyle="italic|bold"/>


</RelativeLayout>